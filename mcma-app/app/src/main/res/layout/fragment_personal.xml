<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="UselessParent">
    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="SpotCinema+"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!-- Scrollable content with padding -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Content container with padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">
            <!-- Details Row -->
            <LinearLayout
                android:id="@+id/account_information_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_box">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Details"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <!-- Edit / Update Row -->
            <LinearLayout
                android:id="@+id/account_information_edit_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_box">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit / Update"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <!-- Change Password Row -->
            <LinearLayout
                android:id="@+id/account_information_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_box">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/coupon_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_box">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coupon/Voucher"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/management_booking_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_box"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Management Booking"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Sign out"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <!-- Payment History Row -->
            <LinearLayout
                android:id="@+id/account_information_booking_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_box">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Booking History"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/information_view_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_box"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Feedback"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Sign out"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/light_gray"
                android:layout_marginTop="20dp"/>
            <!-- Sign out Row -->
            <LinearLayout
                android:id="@+id/account_information_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_box"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign Out"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Sign Out"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>
            <!-- Delete Account Row -->
            <LinearLayout
                android:id="@+id/account_information_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_box">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete Account"
                    android:textSize="16sp"
                    android:textColor="@color/red" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Delete Account"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
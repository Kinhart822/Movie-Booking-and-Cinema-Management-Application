<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MCMA" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
<!--    <style name="Theme.MCMA" parent="Base.Theme.MCMA" />-->

    <!-- FullScreenDialog style -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- TheaterTypeButton style -->
    <style name="TheaterTypeButton">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">12dp</item>
<!--        <item name="android:textColor">@color/button_text_selector</item>-->
    </style>

    <!-- DateButton style -->
    <style name="DateButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_selector_showtime</item>
        <item name="android:textColor">@color/date_text_selector</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>

    </style>

</resources>

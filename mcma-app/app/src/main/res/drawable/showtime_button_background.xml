<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Green when selected -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@android:color/white"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#45A049"/> <!-- Slightly darker green when pressed -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@android:color/white"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333"/> <!-- Dark background -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#808080"/> <!-- Gray border -->
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.component.bookingsession.BookingCheckoutActivity">
    <!--banner-->
    <ImageView
        android:id="@+id/image_view_movie_banner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/content_description_banner"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scroll_view"/>
    <!--header-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/ic_left_gray"
            android:contentDescription="@string/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_view_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/hint_time_remaining"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--checkout detail-->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_movie_banner"
        app:layout_constraintBottom_toTopOf="@id/summary">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--name-->
            <TextView
                android:id="@+id/text_view_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/hint_movie_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text_view_movie_rating_description"/>
            <!--rating-->
            <TextView
                android:id="@+id/text_view_movie_rating_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/hint_movie_rating_description"
                android:textSize="15sp"
                android:textColor="@color/red"
                app:layout_constraintTop_toBottomOf="@id/text_view_movie_name"
                app:layout_constraintBottom_toTopOf="@id/text_view_cinema_screen" />
            <!--cinema screen-->
            <TextView
                android:id="@+id/text_view_cinema_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/hint_cinema_name_screen_name"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_movie_rating_description"
                app:layout_constraintBottom_toTopOf="@id/text_view_date_duration"/>
            <TextView
                android:id="@+id/text_view_date_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/hint_date_duration"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_cinema_screen"
                app:layout_constraintBottom_toTopOf="@id/text_view_items_ordered_summary"/>
            <!--item ordered summary-->
            <TextView
                android:id="@+id/text_view_items_ordered_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/hint_items_ordered_summary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_date_duration"
                app:layout_constraintBottom_toTopOf="@id/separator_1"/>
            <!--separator-->
            <View
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@id/text_view_items_ordered_summary"
                app:layout_constraintBottom_toTopOf="@id/separator_1"/>
            <!--items ordered-->
            <TextView
                android:id="@+id/category_items_ordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/category_booking_items_ordered"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/separator_1"
                app:layout_constraintBottom_toTopOf="@id/recycler_view_items_ordered"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_items_ordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/category_items_ordered"
                app:layout_constraintBottom_toTopOf="@id/separator_2"/>
            <!--separator-->
            <View
                android:id="@+id/separator_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_items_ordered"
                app:layout_constraintBottom_toTopOf="@id/constraint_layout"/>
            <!--total-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/separator_2"
                app:layout_constraintBottom_toTopOf="@id/separator_3">
                <TextView
                    android:id="@+id/category_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_booking_total"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/text_view_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_total_price"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--coupon select-->
            <!--separator-->
            <View
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@id/constraint_layout"
                app:layout_constraintBottom_toTopOf="@id/category_payment_methods"/>
            <!--payment methods-->
            <TextView
                android:id="@+id/category_payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/category_payment_methods"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/separator_3"
                app:layout_constraintBottom_toTopOf="@id/linear_layout_payment_methods"/>
            <LinearLayout
                android:id="@+id/linear_layout_payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/category_payment_methods"
                app:layout_constraintBottom_toTopOf="@id/recycler_view_payment_methods"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_payment_methods"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <!--summary-->
    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:background="@color/booking_summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/check_box_terms_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_terms_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/terms_agreement"
                android:textSize="13sp"/>
        </LinearLayout>
        <vn.edu.usth.mcma.frontend.component.customview.navigate.CustomNavigateButton
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--todo assume paid-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>